{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "./dist",  
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,  
    "strict": true,     
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ES2015", "ES2020", "ES2021", "ES2022", "ESNext.AsyncIterable"],
    "types": ["node", "jest"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
